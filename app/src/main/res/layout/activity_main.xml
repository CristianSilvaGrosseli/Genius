<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fundo"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="330dp"
        android:layout_height="86dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="85dp"
        android:text="@string/bem_vindo_ao_genius1"
        android:textSize="33sp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="277dp"
        android:layout_height="69dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="115dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/button_leave_game"
        android:text="@string/jogar1"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/quitGameButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/quitGameButton"
        android:layout_width="135dp"
        android:layout_height="58dp"
        android:layout_marginBottom="127dp"
        android:layout_marginEnd="115dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/button_leave_game"
        android:text="@string/sair2"
        android:textColor="#000000"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startGameButton"
        app:layout_constraintVertical_bias="0.127" />

</android.support.constraint.ConstraintLayout>
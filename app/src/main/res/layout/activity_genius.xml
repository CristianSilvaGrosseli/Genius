<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_genius"
    android:background="@drawable/fundojogar"
    >

    <Button
        android:id="@+id/buttonYellow"
        android:layout_width="171dp"
        android:layout_height="157dp"
        android:layout_marginBottom="125dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_layout"
        android:text="@string/amarelo1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonBlue"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonGreen"
        android:layout_width="171dp"
        android:layout_height="158dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_layout"
        android:text="@string/verde1"
        app:layout_constraintEnd_toStartOf="@+id/buttonRed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLeaveGame" />

    <Button
        android:id="@+id/buttonBlue"
        android:layout_width="169dp"
        android:layout_height="156dp"
        android:layout_marginBottom="125dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_layout"
        android:text="@string/azul1"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonYellow" />

    <Button
        android:id="@+id/buttonRed"
        android:layout_width="168dp"
        android:layout_height="158dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/button_layout"
        android:text="@string/vermelho1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonGreen"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLeaveGame"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"

        android:background="@drawable/button_leave_game"
        android:text="Voltar"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/initGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="125dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="66dp"
        android:text="ComeÃ§ar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGreen" />

</android.support.constraint.ConstraintLayout>